extends layout

block content

    h1= title

    form(method='POST')
        div.form-create
            label(for='name') Category name:
            input#name(type='text' placeholder='Full size, TKL, etc.' name='name' required value=(undefined===category ? '' : category.name)) 
            label(for='description') Category description:
            input#description(type='text' placeholder='Features of this type of keyboard' name='description' required value=(undefined===category ? '' : category.description)) 
        button(type='submit') Submit
    
    p.create
        a(href='/') Go back to home page

        if errors
            ul
                for error in errors
                    li!=error.msg