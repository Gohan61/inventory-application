extend layout

block content

    h1= title

    form(method='POST')
        div.form-create
            label(for='name') Item name:
            input#name(type='text' placeholder='Chronokey - banana' name='name' required value=(undefined===item ? '' : item.name))
            label(for='description') Description:
            input#description(type='text' name='description' placeholder='Detail of keyboard + switch' required value=(undefined===item ? '' : item.description))
            label(for='category') Category:
            select#category(name='category' required)
                option(value='') --Please select a category--
                for category in categories
                    if item_category
                        if item_category._id.toString()===category._id.toString()
                            option(value=item_category._id selected) #{item_category.name}
                        else
                        option(value=category._id) #{category.name}
                    else
                        option(value=category._id) #{category.name}
            label(for='price') Price:
            input#price(type='number' step='0.01' name='price' placeholder=32.99 required value=(undefined===item ? '' : item.price))
            label(for='numberInStock') Number in stock:
            input#numberInStock(type='number' name='numberInStock' placeholder=5 required value=(undefined===item ? '' : item.numberInStock))
        button(type='submit') Submit
    
    if errors
        ul
            for error in errors
                li!=error.msg

    p.create
        a(href='/') Go back to home page